<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.islasf.samaelmario.vista">

    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PerfilActivity"
            android:label="@string/title_activity_perfil"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EnvioSMSActivity"
            android:label="@string/title_activity_envio_sms"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ListaSmsActivity"
            android:label="@string/title_activity_lista_contactos"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".EnvioEmailActivity"
            android:label="@string/title_activity_email"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ListaEmailsActivity"
            android:label="@string/title_activity_lista_emails"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".ListaContactosActivity"
            android:label="@string/title_activity_lista_contactos"
            android:theme="@style/AppTheme" />

        <activity android:name=".PreferenciasActivity"
            android:label="Preferencias">
        </activity>


    </application>

</manifest>